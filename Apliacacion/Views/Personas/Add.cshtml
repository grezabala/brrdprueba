@model  App.Dominio.Entidades.Personas

@{
    ViewBag.Title = "Registro Personas";
}

@using (Html.BeginForm("Add", "Personas", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    <div class="row form-row-gn">
        <div class="col-lg-12">
            <div class="card form-card-gn">
                <div class="card-header text-center">@ViewBag.Title</div>
                <div class="card-body">
                  
                    <div class="form-group row">
                        <div class="col-md-12">
                            <hr />
                        </div>
                        <div class="form-div-gn">

                            <div class="form-group row ">
                                <div class="col-xl-5">
                                    @Html.TextBoxFor(m => m.Nombre, new { @class = "form-control form-border-gn", placeholder = "Nombre Completo" })
                                    @Html.ValidationMessageFor(m => m.Nombre, null, new { @class = "text-danger" })
                                </div>
                                <div class="col-md-7">
                                    <br />
                                </div>
                                <div class="col-xl-6">
                                    @Html.TextBoxFor(m => m.FechaDeNacimiento, new { @class = "form-control form-border-gn", type = "date" })
                                    @Html.ValidationMessageFor(m => m.FechaDeNacimiento, null, new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>
                        <div class="col-md-12">
                            <hr />
                        </div>
                    </div>
                    <div class="form-div-gn">
                        <div class="form-group col-md-10">
                            <div class="col-lg-12">
                                <button type="submit" class="btn btn btn-info form-boton-gn form-boton-gn">REGISTRARTE</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

}

